.slider-container {
  width: 100%;
  height: 40px;
  position: relative;
  margin-bottom: 15px;
  * {
    float: left;
  }
}

.slider-name-container {
  display: none;
  position: absolute;
  height: 24px;
  width: 30%;
  top: 8px;
  left: 0;
  line-height: 24px;
  overflow: hidden;
  font-size: 14pt;
}

.slider-name,
.slider-value {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 10px;
  opacity: 1;
  -webkit-transition: all 0.30s linear 0.0s;
}

.slider-name.underfocus,
.slider-value.underfocus {
  top: -100%;
  opacity: 0;
}

.slider-value-reset {
  font-size: 11pt;
  color: #999999;
  cursor: pointer;
}

.slider-input-container {
  /*position: absolute;*/
  height: 21px;
  top: 10px;
  left: 30%;
  right: 0;
  padding-left: 10px;
  padding-right: 10px;
}

.slider-min,
.slider-max {
  color: #999999;
  position: absolute;
  top: 32px;
  width: auto;
}

.slider-min {
  /*left: 28%;*/
}

.slider-max {
  right: 0%;
}

.slider-input {
  position: absolute;
  top: 4px;
  left: 0;
  width: 100%;
  height: 100%;
}

input[type="range"] {
  /*height: 2px;*/
  margin-top: 5px;
  -webkit-appearance: none;
  background-color: #999999;
  height: 4px !important;
  -webkit-transition: all 0.30s linear 0.0s;
  cursor: pointer;
}

input[type="range"]:hover, input[type="range"]:focus,
input[type="range"]:active {
  background-color: #1a214c;
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  position: relative;
  top: 0px;
  z-index: 1;
  width: 28px;
  height: 28px;
  cursor: pointer;
  border-radius: 100%;
  background-color: #2a357b;
  border: 3px solid #999999;
  color: #ffffff;
}

input[type="range"]::-webkit-slider-thumb:hover,
input[type="range"]::-webkit-slider-thumb:focus {
  -webkit-transition: all 0.30s linear 0.0s;
  background-color: #1a214c;
  border: 2px solid #999999;
  color: #000000;
}