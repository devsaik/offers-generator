.ad-gallery-upload {

  .row {
    clearfix();
    position: relative;
    &:before {
      content: '';
      position: absolute;
      top: 0;
      bottom: 0;
      left: 50%;
      width: 1px;
      margin-left: -1px;
      background: #dbdbdb;
    }
  }

  .title {
    text-align: center;

    df-label {
      vertical-align: 6px;
      margin-left: -5px;
    }
  }

  .row-image {
    text-align: center;

    .wrap {
      position: relative;
      width: 102px;
      height: 103px;
      margin: 0 auto;
      background: #efefef;

      &.selected {
        background: #fff;

        &:after {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          border: $color-turquoise solid 3px;
        }
      }
    }

    .img-box {
      display: table-cell;
      vertical-align: middle;
      width: 102px;
      height: 103px;

      img {
        max-width: 102px;
        max-height: 103px;
      }
    }
  }

  .col-upload {
    padding-right: 40px;

    .row-upload {
      position: relative;
      display: block;
      margin-top: 35px;

      input[type="file"] {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
      }

      .pp-btn {
        width: 100%;
      }

      .icon {
        width: 15px;
        vertical-align: -1px;
      }
    }
  }

  .col-import {
    padding-left: 40px;

    .row-import {
      position: relative;
      margin-top: 35px;

      .pp-btn {
        position: absolute;
        right: 0;
        top: -1px;
        min-width: inherit;
        padding: 0 12px;
        height: 33px;
      }

      .icon {
        width: 15px;
        vertical-align: -1px;
      }
    }
  }

  .import-copyright {
    color: #ff0000;
    font-size: 15px;
    padding-top: 20px;
    text-align: center;
  }

  .row-buttons {
    clearfix();
    margin-top: 35px;

    .pp-btn { float: left; }
    .pp-btn + .pp-btn { float: right; }
  }
}

.form-group {
  margin-bottom: 15px;

  .img-col {
    display: inline-block;
    vertical-align: top;
    margin: 0 5px 5px 0;

    img {
      height: 100px;
      box-shadow: 0 0 7px 0px #bebebe;
      cursor: pointer;
      border-radius: 2px;

      &:hover {
        box-shadow: 0 0 5px 2px #bebebe !important;
      }
    }
  }
}
