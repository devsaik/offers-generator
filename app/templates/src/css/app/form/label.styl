.pp-form__label,
df-label {
  position: relative;
  display: inline-block;
  margin-bottom: 5px;
  font: 600 14px/1.2 $fontLato;
  color: #757B81;
  user-select: none;

  label {
    cursor: pointer;
    &.required:before {content: '*'}
  }

  .tooltip {
    position: relative;
    display: inline-block;
    height: 15px;
    width: 15px;
    margin-left: 5px;

    &:hover {
      z-index: 1000 !important;

      .tooltip-popover {
        visibility: visible;
        opacity: 1;
      }
    }

    &-icon {
      display: inline-block;
      width: 15px;
      height: 15px;
      border-radius: 15px;
      line-height: 15px;
      background: #c9c7ce;
      color: #fff;
      text-align: center;
      font-weight: 600;
      font-size: 12px;
      cursor: default;
      &:hover { background: #008ac0;}
    }

    .fa-info { color: #fff }

    &-popover {
      visibility: hidden;
      opacity: 0;
      position: absolute;
      top: 100%;
      left: 0;
      z-index: 2;
      width: 150px;
      margin: 10px 0 0 -40px;
      padding: 10px;
      border-radius: 3px;
      box-shadow: 0 0 15px 5px rgba(0,0,0,0.1);
      background: #fff;
      color: #000;
      font: 400 14px/1.2 $fontLato;
      -webkit-transition: opacity 0.1s linear 1s;
      transition: opacity 0.1s linear 1s;

      &:before {
        content: '';
        position: absolute;
        left: 42px;
        bottom: 100%;
        border-left: 5px solid transparent;
        border-right: 5px solid transparent;
        border-bottom: 10px solid #fff;
      }

      &.right {
        left: auto;
        right: 0;
        margin: 10px -15px 0 0;

        &:before {
          left: auto;
          right: 17px;
        }
      }
    }
  }
}