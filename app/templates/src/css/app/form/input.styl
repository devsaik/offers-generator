.pp-form__input,
df-input {
  display: block;
  position: relative;

  .symbol-text {
    position: absolute;
    z-index: 1;
    top: 50%;
    left: 5px;
    margin-top: -8px;
    color: #757b81;
    font-size: 14px;
  }

  input,
  textarea {
    outline: none;
    border: none;
    width: 100%;
    height: 31px;
    padding: 0 10px;
    box-sizing: border-box;
    border-radius: 3px;
    box-shadow: 0 0 3px rgba(0, 0, 0, .26);
    background: #fff;
    color: #000;
    font: 300 14px/31px $fontLato;

    &.symbol { padding-left: 15px }

    /* color of placeholders */
    &:-moz-placeholder { color: #999; }
    &::-moz-placeholder { color: #999; }
    &:-ms-input-placeholder { color: #999; }
    &::-webkit-input-placeholder { color: #999; }
  }

  textarea {
    height: 125px;
    padding: 5px 10px;
    resize: vertical;
    line-height: 1.2;
  }


  /* states */
  input:focus {
    border: $color-turquoise solid 2px;
  }

  &.ng-invalid.ng-touched.ng-dirty input {
    border: red solid 2px;
  }
}