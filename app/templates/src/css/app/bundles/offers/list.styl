.offers-bundle {
  padding: 30px 0 150px;

  /* title block of page */
  .title-block {
    clearfix();
    padding-bottom: 5px;
    border-bottom: 1px solid #737373;

    &__title {
      resetMP();
      float: left;
      font-size: 25px;
    }

    &__link {
      float: right;
      margin-top: 9px;
      color: #3275cc;
      font-size: 18px;
    }
  }

  /* menu */
  .menu {
    margin: 10px 0 35px;

    &__inner {
      clearfix();
      margin-bottom: 16px;

      .pp-selectbox {
        width: 132px;
        &__wrapper.active { z-index: 1000 }
      }
    }
  }

  /* list items */
  .list-offers {
    clearfix();
    resetMP();
    list-style-type: none;
    margin: 0 -15px;

    &__item {
      margin-bottom: 30px;
      &.changed { z-index: 999 !important; }
    }
  }

  /* notification for offer events */
  .offer-status-label {
    position: absolute;
    left: 0;
    bottom: 100%;
    z-index: 1;
    width: 300px;
    height: 32px;
    padding: 0 15px;
    margin-bottom: -3px;
    color: #fff;
    background: #399400;
    font: 12.5px / 32px $fontLato;
    box-sizing: border-box;

    &:before {
      content: '';
      position: absolute;
      top: 100%;
      left: 0;
      width: 0;
      height: 0;
      border-top: 16px solid #215607;
      border-left: 15px solid transparent;
    }
  }

  .centerMessage {
    text-align: center;
    padding: 200px;
    color: #000;
    font-weight: bold;
    font-size: 18px;
  }
}