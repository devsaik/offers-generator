.offer-preview {
  background-color: #fff;
  line-height: 1.2;
  font-family: $fontLato;

  .qrcode {
    float: right;
    width: 106px;
    text-align: center;

    figure {
      resetMP();
      img-box();
      border: #fff solid 4px;
      width: 100%;
      font-size: 0;
      margin-bottom: 3px;
    }

    span {
      font-size: 15px;
      text-transform: uppercase;
    }
  }


  /* header */
  &__header {
    clearfix();
    resetMP();
    padding: 25px 30px 10px;

    .qrcode { display: none; }

    .img-box {
      float: left;
      width: 100px;

      img {
        width: 100%;
        height: auto;
      }
    }

    .info { overflow: hidden; }
    .img-box + .info { padding-left: 20px;}

    .title {
      resetMP();
      font-size: 11px;
      font-weight: bold;
      text-transform: uppercase;
    }

    .address {
      color: #bdbdbd;
      font-size: 11px;
    }
  }


  /* offer stripe section */
  &__stripe {
    clearfix();
    resetMP();
    padding: 25px 30px;
    background: #024a7b;
    color: #fff;

    .img-box {
      float: left;
      width: 100px;
      margin-right: 30px;
      text-align: center;

      img {
        width: 100%;
        height: auto;
      }
    }

    .qrcode {
      margin-left: 5%;
      color: #fff;
    }

    .info { overflow: hidden; }

    .title {
      resetMP();
      margin-bottom: 15px;
      font-size: 26px;
      font-weight: bold;
    }

    .pretitle {
      resetMP();
      font-size: 18px;
    }

    .code {
      resetMP();
      margin-top: 10px;
      font-size: 12px;
      font-weight: bold;
    }

    .restrictions {
      margin-top: 35px;
      font-size: 10px;
    }
  }


  /* offer details section */
  &__details {
    clearfix();
    resetMP();
    padding: 30px 30px 0;

    .list {
      resetMP();
    }

    .qrcode + .list {padding-right: 130px;}

    li {
      font-size: 14px;
      list-style-type: none;
    }

    p {
      resetMP();
      margin-top: 15px;
    }
  }


  /* footer */
  &__footer {
    clearfix();
    resetMP();
    padding: 50px 30px 40px;

    .top {
      clearfix();
    }

    .disclaimer {
      margin-top: 20px;
      font-size: 10px;
      color: #aaa;
    }

    .sparkpay {
      float: right;
    }
  }

  /* devices */
  &__devices {
    img-box();
    position: relative;
    padding: 40px 0;
    text-align: center;

    &:before {
      content: '';
      position: absolute;
      bottom: 100%;
      left: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,0.5) 100%);
      z-index: 5;
    }
  }
}

/* for mobile view */
.mobile .offer-preview {

  .img-box {
    float: none;
    margin: 0 auto;
    margin-bottom: 20px;
  }

  /* header */
  &__header {
    .qrcode {
      display: block;
      float: none;
      margin: 20px auto 0;
    }

    .info {
      padding-left: 0;
    }
  }

  /* stripe */
  &__stripe .qrcode { display: none; }

  /* details */
  &__details {
    .qrcode { display: none; }
    .list { padding: 0; }
  }

  /* footer */
  &__footer {
    .top { text-align: center; }
    .sparkpay {
      padding-top: 10px;
      float: none;
    }
  }
}

@media only screen and (max-width: 480px) {
  .offer-preview {

    .img-box {
      float: none;
      margin: 0 auto;
      margin-bottom: 20px;
    }

    /* header */
    &__header {
      .qrcode {
        display: block;
        float: none;
        margin: 20px auto 0;
      }

      .info {
        padding-left: 0;
      }
    }

    /* stripe */
    &__stripe .qrcode { display: none; }

    /* details */
    &__details {
      .qrcode { display: none; }
      .list { padding: 0; }
    }

    /* footer */
    &__footer {
      .top { text-align: center; }
      .sparkpay {
        padding-top: 10px;
        float: none;
      }
    }
  }
}
