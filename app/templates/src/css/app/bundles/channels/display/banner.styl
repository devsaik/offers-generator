.banner-form {
  clearfix();

  .title {
    resetMP();
    margin-bottom: 35px;
    font: 300 25px/1.2 $fontLato;
  }

  .img-box {
    resetMP();
    img-box();
    text-align: center;
  }

  .form-row {

    .pp-btn {
      width: 100%;
      height: 32px;
      line-height: 32px;
      font-size: 14px;
    }

    input[type="file"] {
      position: absolute;
      left: 0;
      top: 0;
      opacity: 0;
    }
  }

  .row-buttons {
    clearfix();
  }
}
