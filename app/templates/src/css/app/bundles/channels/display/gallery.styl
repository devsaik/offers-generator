.channel-gallery {

  .gallery-row { margin-bottom: 30px; }

  .title {
    resetMP();
    margin-bottom: 10px;
    font: 300 25px/1.2 $fontLato;
  }

  .gallery-list {

    .flip-content {
      display: table-cell;
      vertical-align: middle;
      width: 250px;
      height: 250px;
    }

    img {
      display: inline-block;
      max-width: 100%;
      max-height: 100%;
    }
  }

  .row-upload {

    label { position: relative; }

    input {
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      cursor: pointer;
    }
  }
}