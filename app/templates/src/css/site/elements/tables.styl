/* table */
.table {
  width: 100%;
  border-collapse: collapse;
  border-spacing: 0;

  tr {
    border-bottom: #f0f0f0 solid 1px;
  }

  th,
  td {
    padding: 10px 12px;
    color: #000;
    font-size: 12px;
    text-align: left;
  }

  th {
    background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #fff), color-stop(100%, #e6e6e6));
    background: linear-gradient(to bottom, #fff 0%, #e6e6e6 100%);
    border-top: 1px solid #dbdbdb;
    border-bottom: 1px solid #ccc;
  }
}

/* table row dropdown */
.table-row {
  font-size: 11px;
  cursor: pointer;

  &:hover {
    border-bottom: 1px solid #aed3f1;
    box-shadow: inset 0 1px 0 #fff;
    background-color: #e8f6ff;
  }

  .row-first.active {

    td {
      background: #f0f0f0;
      box-shadow: 0 1px 0px rgba(0, 0, 0, 0.07) inset, 0 2px 0px rgba(0, 0, 0, 0.05) inset, 0 3px 0px rgba(0, 0, 0, 0.02) inset, 0 4px 0px rgba(0, 0, 0, 0.01) inset;
    }
    &:hover td {
      box-shadow: none;
    }
  }

  .row-second {

    td {
      border-top: 1px solid #333;
      border-bottom: 0 solid #333;
      background: #4c4c4c url(../assets/img/sparkpay/dark_bg.jpg) repeat-x top;
      box-shadow: 0 -2px 3px #333 inset, 0 2px 3px #333 inset;
    }

    .btn {
      text-transform: uppercase
    }

    .pp-icon {
      vertical-align: -3px;
      margin: 0 2px 0 0;
    }
  }
}