.footer {
  position: fixed;
  width: 100%;
  height: 65px;
  left: 0;
  bottom: 0;
  z-index: 1000;
  padding: 15px 0;
  box-sizing: border-box;
  border-top: 1px solid #ccc;
  box-shadow: 0 1px 0 #fff inset, 0 -1px 8px rgba(0,0,0,0.05);
  background: #ddd url(../assets/img/sparkpay/gray-pattern.png) repeat;
  font: 11px/1.2 $fontHelvetica;
  text-align: right;

  .logo { float: left }

  .copy {
    resetMP();
    margin-bottom: 5px;
    color: #919191;
  }

  .links {
    resetMP();

    a {
      color: #0a71c5;
      text-decoration: none;
      &:hover { text-decoration: underline }
    }

    span {
      padding: 0 3px;
      color: #666;
    }
  }
}