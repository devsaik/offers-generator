/* fonts */
@font-face {
  font-family: 'TGB';
  src: url('../fonts/tg-bold.eot');
  src: url('../fonts/tg-bold.svg#svgFontName') format('svg'),
  url('../fonts/tg-bold.eot?#iefix') format('embedded-opentype'),
  url('../fonts/tg-bold.woff') format('woff'),
  url('../fonts/tg-bold.ttf')  format('truetype');
}

$fontHelvetica = Helvetica, Arial, sans-serif;
$fontTGB = 'TGB', Arial, sans-serif;

/* media queries */
$sm = 768px;
$md = 992px;
$lg = 1200px;